generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

enum UserRole {
  CABINET
  CLIENT
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  role          UserRole  @default(CLIENT)
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  
  // Si c'est un cabinet
  clients       Client[]  @relation("CabinetClients")
  
  // Si c'est un client
  clientProfile Client?   @relation("ClientUser")
  
  @@map("users")
}

model Client {
  id          String   @id @default(cuid())
  name        String
  email       String?
  siret       String?
  adresse     String?
  codePostal  String?
  ville       String?
  telephone   String?
  
  // Lien vers le cabinet
  cabinetId   String   @map("cabinet_id")
  cabinet     User     @relation("CabinetClients", fields: [cabinetId], references: [id], onDelete: Cascade)
  
  // Lien vers le compte utilisateur client (optionnel)
  userId      String?  @unique @map("user_id")
  user        User?    @relation("ClientUser", fields: [userId], references: [id])
  
  // Token pour upload sans connexion
  uploadToken String   @unique @default(uuid()) @map("upload_token")
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  // Relations
  factures    Facture[]
  
  @@unique([name, cabinetId])
  @@map("clients")
}

enum FactureStatus {
  EN_ATTENTE
  TRAITEE
  ARCHIVEE
}

enum FactureType {
  FACTURE
  NOTE_DE_FRAIS
  RELEVE_BANCAIRE
  AUTRE
}

model Facture {
  id          String        @id @default(cuid())
  
  // Informations client
  clientId    String        @map("client_id")
  client      Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  // Fichier
  filename    String
  originalName String       @map("original_name")
  mimeType    String        @map("mime_type")
  size        Int
  url         String
  
  // Métadonnées
  status      FactureStatus @default(EN_ATTENTE)
  type        FactureType   @default(FACTURE)
  montant     Float?
  dateFacture DateTime?     @map("date_facture")
  description String?
  
  // OCR / Extraction
  ocrData     Json?         @map("ocr_data")
  
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")
  
  @@map("factures")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

enum InvoiceStatus {
  TO_PROCESS
  PROCESSING
  PROCESSED
  ERROR
  VALIDATED
}

model Invoice {
  id           String       @id @default(cuid())
  filename     String
  originalName String       @map("original_name")
  vendor       String?
  amount       Float?
  date         DateTime?
  status       InvoiceStatus @default(TO_PROCESS)
  confidence   Float?
  ocrText      String?      @db.Text
  category     String?
  filePath     String       @map("file_path")
  mimeType     String       @map("mime_type")
  size         Int
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")

  @@map("invoices")
}
